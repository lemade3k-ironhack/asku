<main class='formPage'>
  <section>
    <h1 class="mt-5 d-flex justify-content-center">Edit your group</h1>
    <div class="d-flex justify-content-center">
      <img src="{{ group.image }}" class="form-image" alt="group-image">
    </div>
  </section>

  <section class="mt-5">
    {{#if msg}}
    <div  class="alert alert-warning" role="alert">{{ msg }}</div>
    {{/if}}

    <form action="/groups/{{group._id}}/update" method="POST" enctype="multipart/form-data">
      <!-- send old image as hidden field due to rerendering -->
      <input name="oldImg" type="hidden" value="{{ group.image }}">

      <div class="mb-3">
        <div class="input-group">
          <div class="custom-file">
            <input name="image" type="file" class="custom-file-input" id="inputGroupFile01"
              aria-describedby="inputGroupFileAddon01" accept="image/png image/jpg image/jpeg">
            <label class="custom-file-label" for="inputGroupFile01">Choose group image</label>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="groupName">Group Name:</label>
        <input class="form-control text-form" type="text" placeholder="groupName" name="groupName"
          value="{{ group.groupName }}" />
      </div>

      <div class="mb-3">
        <label for="description">What's your group about?</label>
        <textarea class="form-control text-form" name="description" type="text"
          placeholder="Add a description of your group!" rows="3">{{group.description}}</textarea>
      </div>

      <div class="mb-3">
        <label for="members">Members:</label>
        <textarea name="members" class="form-control" placeholder="Alice, Bob, Ada"
          id="floatingTextarea">{{ group.members }}</textarea>
      </div>

      <div class="d-flex justify-content-between">
        <button class="btn btn-warning signin-bottom" type="submit">Update</button>
        <a class="btn btn-outline-warning edit-profile-btn" href="/groups/{{group._id}}">Cancel</a>
      </div>
    </form>
  </section>
</main>