<main id='newGroup'>

  <section>
    <h1>Create a new group!</h1>

    {{#if msg}}
    <div>{{msg}}</div>
    {{/if}}

    <form action="/groups/create" method="POST">
      <label for="image"></label>
      <input  name="image" type="url" placeholder="place a new URL for your avatar" value="{{ group.image }}">

      <label for="groupName">Group Name:</label>
      <input name="groupName" type="text" placeholder="groupName" value="{{ group.groupName }}" />

      <label for="description">What's your group about?</label>
      <input name="description" type="text" placeholder="Add a description of your group!"
        value="{{group.description}}">

      <button type="submit">Create</button>
    </form>
  </section>
</main>