<main id='newGroup'>

  <section>
    <h1>Create a new group!</h1>

    {{#if msg}}
    <div>{{msg}}</div>
    {{/if}}

    <form action="/groups/create" method="POST" enctype="multipart/form-data">
      <label for="image">Add a Group Image</label>
      <input name="image" type="file" accept="image/png image/jpg image/jpeg">

      <label for="groupName">Group Name</label>
      <input name="groupName" type="text" placeholder="groupName" value="{{ group.groupName }}" />

      <label for="description">What's your group about?</label>
      <input name="description" type="text" placeholder="Add a description of your group!"
        value="{{group.description}}">

      <label for="members">Members:</label>
      <input name="members" type="text" placeholder="Alice, Bob, Ada" value="{{ group.members }}">

      <button type="submit">Create</button>
    </form>
  </section>
</main>