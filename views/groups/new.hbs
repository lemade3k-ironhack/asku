<main class='formPage'>
  <section>    
    <h1 class="mt-5 d-flex justify-content-center">Create a new group</h1>
  </section>

  <section class="mt-5">
    {{#if msg}}
    <div  class="alert alert-warning" role="alert">{{ msg }}</div>
    {{/if}}

    <form action="/groups/create" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <div class="input-group">
          <div class="custom-file">
            <input name="image" type="file" class="custom-file-input" id="inputGroupFile01"
              aria-describedby="inputGroupFileAddon01" accept="image/png image/jpg image/jpeg">
            <label class="custom-file-label" for="inputGroupFile01">Choose group image</label>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="groupName">Group Name:</label>
        <input class="form-control text-form" name="groupName" type="text" placeholder="Group name"
          value="{{ group.groupName }}" />
      </div>

      <div class="mb-3">
        <label for="description">What's your group about?</label>
        <textarea class="form-control text-form" name="description" type="text"
          placeholder="Add a description of your group!" value="{{group.description}}" rows="3"></textarea>
      </div>

      <div class="mb-3">
        <label for="members">Add members:</label>
        <textarea name="members" class="form-control" placeholder="Alice, Bob, Ada"
          id="floatingTextarea">{{ group.members }}</textarea>
      </div>

      <div class="d-flex justify-content-between">
        <button class="btn btn-warning edit-profile-btn" type="submit">Create</button>
        <a class="btn btn-outline-warning edit-profile-btn" href="/profile">Cancel</a>
      </div>
    </form>
  </section>
</main>