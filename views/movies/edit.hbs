<main id='newMovie'>
  <section>
    <h2 class="new-movie-title">Update movie</h2>
    <img class="edit-movies-avatar" src="{{movie.image}}" alt="movie-preview-image">

    {{#if msg}}
    <div>{{msg}}</div>
    {{/if}}

    <form action="/groups/{{groupId}}/movies/{{movie._id}}/update" method="POST" enctype="multipart/form-data">
      <!-- send old image as hidden field due to rerendering -->
      <input name="oldImg" type="hidden" value="{{ movie.image }}">

      <div class="mb-3">
        <div class="input-group">
          <div class="custom-file">
            <input name="image" type="file" class="custom-file-input" id="inputGroupFile01"
              aria-describedby="inputGroupFileAddon01" accept="image/png image/jpg image/jpeg">
            <label class="custom-file-label" for="inputGroupFile01">Update preview image</label>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <label for="title">Title:</label>
        <input class="form-control text-form" name="title" type="text" placeholder="Add movies title"
          value="{{ movie.title }}" />
      </div>

      <div class="mb-3">
        <label for="year">Year:</label>
        <input class="form-control text-form" name="year" type="number" min="1900" max="2025" step="1"
          placeholder="Add a year" value="{{ movie.year }}" />
      </div>

      <div class="mb-3">
        <label for="director">Director:</label>
        <input class="form-control text-form" name="director" type="text" placeholder="Add a director"
          value="{{ movie.director }}" />
      </div>

      <div class="mb-3">
        <label for="cast">Cast:</label>
        <input class="form-control text-form" name="cast" type="text" placeholder="Add some actors"
          value="{{ movie.cast }}" />
      </div>

      <div class="mb-3">
        <label for="plot">Plot:</label>
        <textarea class="form-control text-form" name="plot" type="text" placeholder="Add some info about the plot"
          rows="3">{{ movie.plot}}</textarea>
      </div>


      <div class="mb-3">
        <label for="trailer">Trailer:</label>
        <input class="form-control text-form" name="trailer" type="url" placeholder="Add an URL for a trailer"
          value="{{ movie.trailer }}">
      </div>

      <div class="mb-3">
        <label for="genre">Genre:</label>
        <input class="form-control text-form" name="genre" type="text" placeholder="Add a genre"
          value="{{ movie.genre }}" />
      </div>

      <div class="d-flex justify-content-between">
        <button class="btn btn-warning edit-profile-btn" type="submit">Update</button>
        <a class="btn btn-outline-warning edit-profile-btn" href="/groups/{{groupId}}/movies/{{movie._id}}">Cancel</a>
      </div>
    </form>
  </section>
</main>