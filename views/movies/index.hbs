<main id='moviesIndex'>
  <header>
    <img src="{{group.image}}" alt="group-image">
    <span>{{group.groupName}}</span>
    <h1>All Movies</h1>
  </header>

  <section>
    <a href="/groups/{{group._id}}/movies/new">Add new movie</a>

    {{#each movies}}
    <a href="/groups/{{../group._id}}/movies/{{this._id}}">
      <img src="{{this.image}}" alt="{{this.title}}-image">
      <span>{{this.title}}</span>
    </a>
    {{/each}}
  </section>
</main>