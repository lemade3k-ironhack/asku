<main>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <nav class="mt-3 ml-3" aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/profile">Home</a></li>
            <li class="breadcrumb-item"><a href="/groups/{{group._id}}">Group "{{group.groupName}}"</a></li>
            <li class="breadcrumb-item">Movies</li>
          </ol>
        </nav>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 offset-md-2">
        <img class="group-image mb-3" src="{{group.image}}" alt="group-image">
        <h3 class="group-title">{{group.groupName}}</h3>
        <p class="group-title">{{group.description}}</p>
        <a href="/groups/{{group._id}}/movies/new" class=" btn btn-warning edit-profile-btn">
          Add new movie</a>
      </div>
      <div class="col-md-6">
        <h1 class="index-movie-title">All Movies in {{group.groupName}}</h1>
      </div>
    </div>

    <div class="row mt-5">
      <div class="col-md-10 offset-md-2 index-movies-list">
        {{#each movies}}
        <a class="movie-title" href="/groups/{{../group._id}}/movies/{{this._id}}">
          <img class="movie-image" src="{{this.image}}" alt="{{this.title}}-preview-image">
          <p class="text-break">{{this.title}} ({{this.year}})</p>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</main>