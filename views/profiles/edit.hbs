<main id='edit-profile'>
  <section class>
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-5 offset-md-2">
          <div class="user-info">
            <img src="{{ avatar }}" class="user-avatar" alt="user-avatar">
            <h3>Edit your profile</h3>
            {{#if msg}}
            <div>{{ msg }}</div>
            {{/if}}
            <form action="/profile/update" method="POST" enctype="multipart/form-data">
              <!-- send old image as hidden field due to rerendering -->
              <input name="oldImg" type="hidden" value="{{ avatar }}">

              <label for="image">Add a Profile Image:</label>
              <input name="avatar" class="form-label" type="file" accept="image/png image/jpg image/jpeg">
              <br>
              <label for="username">Username:</label>
              <input name="username" class="form-control form-control-lg" type="text" placeholder="Edit username"
                value="{{ username }}" />

              <label for="quote">Some words about you:</label>
              <textarea name="quote" class="form-control" rows="5" type="text"
                placeholder="Edit quote">{{ quote }}</textarea>

              <button type="submit" class="btn btn-secondary edit-profile-btn">Update Profile</button>
            </form>
          </div>
        </div>
        <div class="col-md-5"></div>
      </div>
    </div>
  </section>
</main>