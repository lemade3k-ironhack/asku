<main id='editProfile'>
  <section>
    <h1>Edit your profile</h1>

    {{#if msg}}
    <div>{{msg}}</div>
    {{/if}}

    <form action="/profile/update" method="POST">
      <img src="{{user.avatar}}" alt="user-avatar">
      <br />
      <input type="text" placeholder="place a new URL for your avatar" name="avatar" value="{{ user.avatar }}">

      <label for="username">Username:</label>
      <input type="text" placeholder="Edit username" required name="username" value="{{ user.username }}" />

      <label for="quote">Some words about you:</label>
      <input type="text" placeholder="Edit quote" name="quote" value="{{ user.quote }}" />

      <button type="submit">Update Profile</button>
    </form>
  </section>