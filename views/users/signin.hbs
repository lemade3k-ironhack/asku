<main id='signin-header'>
  <header class="d-flex flex-column mt-4">
    <img class="d-flex justify-content-center" src="/images/logoVider.png" alt="logo">

  </header>

  <div class="text-signup">
    <h3>Welcome to Vider!</h3>
    <h4>The way to share good experiences with your friends.</h2>
    <h5>Are you ready to Vider? </h5>
  </div>

  <section class="mt-3">
    <h2 class="d-flex justify-content-center">Sign in to your account:</h2>
    {{#if msg}}
    <div  class="alert alert-warning" role="alert">{{ msg }}</div>
    {{/if}}

    <form class="mt-4 signin-form" action="/signin" method="POST">
      <div class="mb-3">
        <label for="username">Username:</label>
        <input name="username" class="form-control form-control-lg" type="text" placeholder="Enter a username"
          value="{{username}}">
      </div>

      <div class="mt-3">
        <label for="password">Password:</label>
        <input name="password" class="form-control form-control-lg" type="password" placeholder="Enter a password"
          value="{{password}}">
      </div>

      <div class="mt-3">
        <button type="submit" class="btn btn-warning form-control">Sign in</button>
    </form>
  </section>
  <section class="d-flex flex-column mt-3">
    <p class="signin-bottom">Not a Vider yet?</p>
    <a href="/signup" type="link" class="btn btn-warning d-flex justify-content-center">Sign up now</a>
  </section>
</main>