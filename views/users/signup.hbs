<main id='signup'>
  <header class="d-flex flex-column mt-4">
    <img class="d-flex justify-content-center" src="/images/logoVider.png" alt="logo">


  </header>

  <div class="text-signup">
    <h4>Welcome to Vider!</h3>
      <h5>The way to share good experiences with your friends.</h2>
  </div>
  <section class="mt-3">
    <h3 class="d-flex justify-content-center">Start videring now! </h3>
    {{#if msg}}
    <div  class="alert alert-warning" role="alert">{{ msg }}</div>
    {{/if}}

    <form class="mt-4 signin-form" action="/signup" method="POST">
      <div class="mt-3"></div>
      <label for="username">Username:</label>
      <input name="username" class="form-control form-control-lg" type="text" placeholder="Enter a username"
        value="{{username}}">
      </div>

      <div class="mt-3">
        <label for="password">Password:</label>
        <input name="password" class="form-control form-control-lg" type="password" placeholder="Enter your Password"
          value="{{password}}">
      </div>

      <div class="mt-3">
        <label for="passwordConfirmation">Confirm your Password: </label>
        <input name="passwordConfirmation" class="form-control form-control-lg" type="password"
          placeholder="Confirm your Password" value="{{passwordConfirmation}}">
      </div>

      <div class="mt-3">
        <button class="btn btn-warning form-control" type="submit">Sign up</button>
      </div>
    </form>
  </section>

  <section class="d-flex flex-column mt-3">
    <p class="signin-bottom">Already have an account?</p>
    <a class="btn btn-warning d-flex justify-content-center" href="/">Sign in now</a>
  </section>
</main>