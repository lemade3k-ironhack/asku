<main id='signup'>
  <header>
    <img src="/images/logoDummy.png" alt="logo">

    <h3>Share experiences</h3>
    <p>create an account or <a class="btn btn-warning" href="/">sign in</a></p>
  </header>

  <section>
    {{#if msg}}
    <div>{{msg}}</div>
    {{/if}}

    <form action="/signup" method="POST">
      <label for="username">Username</label>
      <input name="username" class="form-control form-control-lg" type="text" placeholder="Enter a username"
        value="{{username}}">

      <label for="password">Password</label>
      <input name="password" class="form-control form-control-lg" type="password" placeholder="Enter your Password"
        value="{{password}}">

      <label for="passwordConfirmation">Password Confirmation</label>
      <input name="passwordConfirmation" class="form-control form-control-lg" type="password"
        placeholder="Confirm your Password" value="{{passwordConfirmation}}">
      <br>
      <button class="btn btn-warning form-control" type="submit">create account</button>
    </form>
  </section>
</main>